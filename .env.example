DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=codex_auth
DB_USERNAME=codex
DB_PASSWORD=codex-pass
DB_ROOT_PASSWORD=root-pass
DB_CHARSET=utf8mb4

ENV_FILE=./.env
DATA_ROOT=/var/docker_data/codex-auth.example.com

# Optional Caddy frontend (disabled unless the `caddy` compose profile is used)
CADDY_DOMAIN=codex-auth.example.com
CADDY_ACME_EMAIL=ops@example.com
CADDY_TLS_FRAGMENT=/etc/caddy/tls-acme.caddy
CADDY_TLS_CERT_FILE=/etc/caddy/tls/tls.crt
CADDY_TLS_KEY_FILE=/etc/caddy/tls/tls.key
CADDY_TLS_DIR=/var/docker_data/codex-auth.example.com/caddy/tls
CADDY_MTLS_DIR=/var/docker_data/codex-auth.example.com/caddy/mtls
CADDY_MTLS_CA_FILE=/etc/caddy/mtls/ca.crt
ADMIN_REQUIRE_MTLS=1

AUTH_RUNNER_URL=http://auth-runner:8080/verify
AUTH_RUNNER_CODEX_BASE_URL=https://codex-auth.example.com
AUTH_RUNNER_TIMEOUT=8
AUTH_RUNNER_IP_BYPASS=1
AUTH_RUNNER_BYPASS_SUBNETS=172.28.0.0/16,172.30.0.0/16

CODEX_SYNC_BASE_URL=https://codex-auth.example.com
CODEX_DEBUG=0

DB_BACKUP_CRON="0 2 * * *"
DB_BACKUP_MAX=30

# ChatGPT quota refresh (quota-cron sidecar)
CHATGPT_USAGE_CRON_INTERVAL=3600

# Will be auto-generated on first boot when empty.
# AUTH_ENCRYPTION_KEY=

# Pricing for GPT-5.1 (per 1k tokens)
# PRICING_URL=https://your-pricing-endpoint/pricing.json
GPT51_INPUT_PER_1K=0.00125
GPT51_OUTPUT_PER_1K=0.01
GPT51_CACHED_PER_1K=0.000125
PRICING_CURRENCY=USD
